<h1>Task Manager</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<%= link_to tasks_path do %>
  <button class= "btn btn-info m-2">
    <i class="fa fa-history"></i> Back to list
  </button>
<% end %>
